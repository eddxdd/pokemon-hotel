								{
									"listen": "test",
									"script": {
										"exec": [
											"pm.test(\"Status code is 201\", function () {",
											"    pm.response.to.have.status(201);",
											"});",
											"",
											"pm.test(\"Response has token\", function () {",
											"    const jsonData = pm.response.json();",
											"    pm.expect(jsonData).to.have.property('token');",
											"    pm.expect(jsonData.token).to.be.a('string');",
											"    ",
											"    // Save token to environment variable",
											"    pm.environment.set(\"auth_token\", jsonData.token);",
											"});",
											"",
											"pm.test(\"Response has trainer object\", function () {",
											"    const jsonData = pm.response.json();",
											"    pm.expect(jsonData).to.have.property('trainer');",
											"    pm.expect(jsonData.trainer).to.be.an('object');",
											"});",
											"",
											"pm.test(\"Trainer object has required fields\", function () {",
											"    const jsonData = pm.response.json();",
											"    const trainer = jsonData.trainer;",
											"    pm.expect(trainer).to.have.property('id');",
											"    pm.expect(trainer).to.have.property('username');",
											"    pm.expect(trainer).to.have.property('email');",
											"});",
											"",
											"pm.test(\"Password is not in response\", function () {",
											"    const jsonData = pm.response.json();",
											"    pm.expect(jsonData.trainer).to.not.have.property('password');",
											"});",
											"",
											"pm.test(\"Save trainer ID\", function () {",
											"    const jsonData = pm.response.json();",
											"    pm.environment.set(\"trainer_id\", jsonData.trainer.id.toString());",
											"});"
										],
