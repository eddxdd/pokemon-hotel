{
  "name": "pokemon-hotel",
  "version": "1.0.0",
  "description": "Pokemon Hotel API - A game-inspired hotel booking platform with Pokemon encounters",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,web -c green,cyan \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/server.ts | pino-pretty",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "tsc && prisma generate",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "pokemon",
    "hotel",
    "booking",
    "api",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.3.0",
    "@prisma/extension-accelerate": "^3.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prisma": "7.3.0",
    "tsx": "^4.21.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "concurrently": "^9.2.1",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  }
}
